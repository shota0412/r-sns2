<div class="container mt-5">
  <div class="row">
    <div class="col-7 mx-auto">
      <div class="card">
        <div class="card-body">
            <%= image_tag attachment_url(@user, :profile_image, :fill, 150, 100, format: "jpg", fallback: "no-image.png") %>
          <h5 class="card-title"><%= current_user.username %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= current_user.profile %></h6>
          <%= link_to 'ユーザー編集', edit_user_path %>
      </div>
    </div>
    </div>
  </div>
</div>